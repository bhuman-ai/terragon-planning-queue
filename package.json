{
  "name": "terragon-planning-queue",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "bot": "node lib/discord-bot/start.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run bot\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:security": "jest --testPathPattern=security",
    "test:collaboration": "jest --testPathPattern=collaboration",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:comprehensive": "node __tests__/test-runner.js",
    "test:enhanced": "node scripts/test-runner-enhanced.js",
    "test:quick": "node scripts/test-runner-enhanced.js --quick",
    "test:llm-only": "node scripts/test-runner-enhanced.js --skip-unit --skip-integration --skip-e2e",
    "test:sacred": "jest --testPathPattern=sacred-document-integrity",
    "test:performance": "jest --testPathPattern=performance",
    "precommit": "npm run test:security && npm run test:sacred",
    "audit:security": "npm audit --audit-level=high",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:llm": "node scripts/validate-llm-code.js --target llm --output detailed",
    "lint:llm:fast": "node scripts/realtime-lint.js",
    "lint:llm:watch": "node scripts/realtime-lint.js --watch lib --output compact",
    "lint:llm:security": "node scripts/validate-llm-code.js --target security --strict --output detailed",
    "lint:llm:api": "node scripts/validate-llm-code.js --target api --output compact",
    "validate:binary": "node scripts/validate-llm-code.js --output compact",
    "validate:strict": "node scripts/validate-llm-code.js --strict --output detailed",
    "type-check": "tsc --noEmit",
    "workflow": "node scripts/workflow-cli.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@vercel/kv": "^3.0.0",
    "axios": "^1.11.0",
    "concurrently": "^8.2.2",
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.5",
    "next": "^14.2.31",
    "node-fetch": "^2.7.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "gray-matter": "^4.0.3",
    "commander": "^11.1.0",
    "chalk": "^4.1.2",
    "lucide-react": "^0.344.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "20.10.5",
    "@types/react": "18.2.45",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.4.5",
    "eslint-plugin-jest": "^27.9.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.1.0",
    "msw": "^2.0.8",
    "node-mocks-http": "^1.13.0",
    "supertest": "^6.3.3",
    "typescript": "5.3.3"
  }
}
